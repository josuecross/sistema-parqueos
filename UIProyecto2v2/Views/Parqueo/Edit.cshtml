@model UIProyecto2v2.Models.Parqueo

@{
    ViewData["Title"] = "Edit";
}

@{
    List<string> mensajes;

    if (ViewBag.Mensajes != null)
    {
        mensajes = ViewBag.Mensajes;
    }
    else
    {
        mensajes = new List<string>();
    }


}

<h1>Edit</h1>

@foreach (string mensaje in mensajes)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>Error!</strong> @mensaje
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<h4>Parqueo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TarifaHora" class="control-label"></label>
                <input asp-for="TarifaHora" class="form-control" min="0" />
                <span asp-validation-for="TarifaHora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TarifaMediaHora" class="control-label"></label>
                <input asp-for="TarifaMediaHora" class="form-control" min="0" />
                <span asp-validation-for="TarifaMediaHora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxVehiculos" class="control-label"></label>
                <input asp-for="MaxVehiculos" class="form-control" type="number" min="0" />
                <span asp-validation-for="MaxVehiculos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraApertura"  class="control-label"></label>
                <input asp-for="HoraApertura" type="time" class="form-control" />
                <span asp-validation-for="HoraApertura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraCierre" class="control-label"></label>
                <input asp-for="HoraCierre" type="time" class="form-control" />
                <span asp-validation-for="HoraCierre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

