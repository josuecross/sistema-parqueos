@model UIProyecto2v2.Models.Parqueo

@{
    ViewData["Title"] = "Crear Reporte";
}

<h1>Create</h1>

<h4>Parqueo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MostrarReporte">
            <div class="form-group">
                <select id='purpose'>
                    <option value="1">Por mes</option>
                    <option value="2">Por dia</option>
				    <option value="3">Rango de horas y minutos</option>
                </select>
            </div>
            <div style='display:none;' id='mes'>
                <div class="form-group">
                    <label class="control-label">Mes</label>
                    <input name="mes" class="form-control" type="month" max="@DateTime.Now.ToString("yyyy-MM")" />
                </div>
            </div>
            <div style='display:none;' id='dia'>
                <div class="form-group">
                    <label class="control-label">Dia</label>
                    <input name="dia" class="form-control" type="date" max="@DateTime.Now.ToString("yyyy-MM-dd")"  />
                </div>
            </div>
            <div style='display:none;' id='rango'>
                <div class="form-group">
                    <label class="control-label">Dia</label>
                    <input name="range_dia" class="form-control" type="date" max="@DateTime.Now.ToString("yyyy-MM-dd")"  />
                </div>

                <div class="form-group">
                    <label class="control-label">Desde</label>
                    <input name="range_from" class="form-control" type="time" />
                </div>

                <div class="form-group">
                    <label class="control-label">Hasta</label>
                    <input name="range_to" class="form-control" type="time" />
                </div>
            </div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<link href="~/css/crar-reporte.css" rel="stylesheet" />
<script src="~/js/crear-reporte.js"></script>
